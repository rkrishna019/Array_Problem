class Solution
{
    //Function to return k largest elements from an array.
    public static ArrayList<Integer> kLargest(int arr[], int n, int k)
    {
        ArrayList<Integer> al = new ArrayList<Integer>();
        Arrays.sort(arr);
        
        int j= 0;
        for(int i = n-1; j<k; i--){
            
            al.add(arr[i]);
            j++;
            
        }
        return al;
    }
}
